#!/usr/bin/env node

var argv = require('minimist')(process.argv.slice(2));
var nb = require('../')(argv);

// start benchmarkding
nb.run();  

// hook `Ctrl + C`
process.on('SIGINT', function () {
  console.log("\n Stoping workers elegantly...");

  nb.stop(function(){
    process.exit(0);
  });

});
